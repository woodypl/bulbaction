<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" android:id="@+id/linearLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/LED01"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/circle_red"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText01"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="09:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/LED02"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/circle_red"
                
                android:src="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText02"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="10:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/LED03"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/circle_red"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText03"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="11:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/LED04"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/circle_red"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText04"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="12:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/LED05"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/circle_red"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText05"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="13:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/LED06"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/circle_red"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText06"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="14:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/LED07"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/circle_red"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText07"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="15:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/LED08"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/circle_red"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/LEDText08"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="16:00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/offButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/busyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ALL OFF" />

    <Button
        android:id="@+id/busyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_toRightOf="@+id/linearLayout1"
        android:text="ALL BUSY" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/offButton"
        android:layout_centerVertical="true"
        android:text="Refresh" />

</RelativeLayout>