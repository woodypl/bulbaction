<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <uk.ac.gla.dcs.bulbaction.CalendarListPreference
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_calendarselect"
        android:key="calendar_list"
        android:id="@+id/calendar_select"
    />
    <CheckBoxPreference
        android:id="@+id/ignore_all_day"
        android:title="@string/ignore_all_day"
        android:key="ignore_all_day"
        android:defaultValue="false"
        />
    <CheckBoxPreference
        android:id="@+id/auto_dim"
        android:title="@string/auto_dim"
        android:key="auto_dim"
        android:defaultValue="false"
        />
    <uk.ac.gla.dcs.bulbaction.TimePreference
        android:title="@string/dim_start_time"
        android:key="dim_start_time"
        android:id="@+id/dim_start_time"
    />
    
    <uk.ac.gla.dcs.bulbaction.TimePreference
        android:title="@string/dim_stop_time"
        android:key="dim_stop_time"
        android:id="@+id/dim_stop_time"
    />
    <!--android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        " -->

</PreferenceScreen>
